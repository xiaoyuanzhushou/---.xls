<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_table_select"
    style="@style/ButtonBackground"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="true"
    android:gravity="center"
    android:paddingStart="8dp"
    android:paddingEnd="8dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_table_bg"
        android:layout_width="48dp"
        android:layout_height="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/menu_setting"
        style="@style/IconTextViewStyle"
        android:layout_width="48dp"
        android:layout_height="72dp"
        android:text="î›“"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:background="@drawable/mask_with_radius"
        app:layout_constraintBottom_toBottomOf="@id/iv_table_bg"
        app:layout_constraintEnd_toEndOf="@id/iv_table_bg"
        app:layout_constraintStart_toStartOf="@id/iv_table_bg"
        app:layout_constraintTop_toTopOf="@id/iv_table_bg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_table_name"
        android:layout_width="48dp"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="10sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_table_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>