<resources>

    <style name="Widget.Theme.MaterialTest.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.MaterialTest.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="ScheduleHeaderStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/nodeIndex</item>
    </style>
</resources>